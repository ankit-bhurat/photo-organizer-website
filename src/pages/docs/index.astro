---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const sections = [
  {
    title: 'Help & Documentation',
    href: '/docs/help',
    description: 'Complete guide to using CullVue',
    icon: 'book',
  },
  {
    title: 'Getting Started',
    href: '/docs/getting-started',
    description: 'Install and set up CullVue in minutes',
    icon: 'rocket',
  },
  {
    title: 'Features Guide',
    href: '/docs/features',
    description: 'Learn about all the features',
    icon: 'layers',
  },
  {
    title: 'AI Search',
    href: '/docs/ai-search',
    description: 'How semantic search works',
    icon: 'sparkle',
  },
  {
    title: 'FAQ',
    href: '/docs/faq',
    description: 'Common questions answered',
    icon: 'chat',
  },
];
---

<Layout title="Documentation - CullVue">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Header -->
      <div class="text-center mb-16">
        <p class="text-sm font-medium text-brand-400 tracking-wide uppercase mb-3">
          Documentation
        </p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight">
          How can we <span class="gradient-text">help?</span>
        </h1>
        <p class="mt-4 text-lg text-surface-400 max-w-xl mx-auto leading-relaxed">
          Everything you need to get the most out of CullVue.
          Guides, references, and answers to common questions.
        </p>
      </div>

      <!-- Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
        {sections.map((section) => (
          <a
            href={section.href}
            class="group card-hover p-6 flex flex-col gap-4 hover:shadow-lg hover:shadow-brand-500/5"
          >
            <!-- Icon -->
            <div class="w-11 h-11 rounded-xl bg-brand-500/10 border border-brand-500/20
                        flex items-center justify-center text-brand-400
                        group-hover:bg-brand-500/15 group-hover:border-brand-500/30
                        transition-all duration-300">
              {section.icon === 'book' && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" />
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z" />
                  <line x1="9" y1="7" x2="15" y2="7" />
                  <line x1="9" y1="11" x2="13" y2="11" />
                </svg>
              )}
              {section.icon === 'rocket' && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z" />
                  <path d="M12 15l-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z" />
                  <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0" />
                  <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5" />
                </svg>
              )}
              {section.icon === 'layers' && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 2 7 12 12 22 7 12 2" />
                  <polyline points="2 17 12 22 22 17" />
                  <polyline points="2 12 12 17 22 12" />
                </svg>
              )}
              {section.icon === 'sparkle' && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 3l1.912 5.813a2 2 0 0 0 1.275 1.275L21 12l-5.813 1.912a2 2 0 0 0-1.275 1.275L12 21l-1.912-5.813a2 2 0 0 0-1.275-1.275L3 12l5.813-1.912a2 2 0 0 0 1.275-1.275L12 3z" />
                </svg>
              )}
              {section.icon === 'chat' && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                  <line x1="9" y1="10" x2="15" y2="10" />
                  <line x1="12" y1="7" x2="12" y2="13" />
                </svg>
              )}
            </div>

            <!-- Text -->
            <div class="flex-1">
              <h2 class="text-lg font-semibold text-white group-hover:text-brand-300 transition-colors duration-200">
                {section.title}
              </h2>
              <p class="mt-1 text-sm text-surface-400 leading-relaxed">
                {section.description}
              </p>
            </div>

            <!-- Arrow -->
            <div class="flex items-center gap-1.5 text-sm font-medium text-surface-500
                        group-hover:text-brand-400 transition-colors duration-200">
              <span>Read more</span>
              <svg
                class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-200"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M5 12h14" />
                <path d="M12 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      <!-- Help callout -->
      <div class="mt-16 text-center">
        <div class="card p-8 inline-block max-w-md mx-auto">
          <p class="text-surface-300 text-sm leading-relaxed">
            Can't find what you're looking for?
          </p>
          <a
            href="/contact"
            class="mt-3 inline-flex items-center gap-2 text-sm font-medium text-brand-400 hover:text-brand-300 transition-colors duration-200"
          >
            Get in touch
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14" />
              <path d="M12 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
