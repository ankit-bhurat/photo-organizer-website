---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const requirements = [
  {
    category: 'Operating System',
    items: [
      'macOS 12 (Monterey) or later',
      'Windows 10 or later',
      'Ubuntu 22.04+ / Fedora 38+ / other modern Linux distributions',
    ],
  },
  {
    category: 'Hardware',
    items: [
      '4 GB RAM minimum (8 GB recommended for large libraries)',
      '500 MB disk space for the application',
      '~1 GB additional disk space for the AI search model',
    ],
  },
  {
    category: 'Optional',
    items: [
      'A dedicated GPU is not required but will significantly speed up initial embedding generation',
    ],
  },
];
---

<Layout title="System Requirements - Photo Organizer Docs">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Breadcrumb -->
      <nav class="mb-10" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-surface-500">
          <li>
            <a href="/docs" class="hover:text-white transition-colors duration-200">Docs</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4 text-surface-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
              <path d="M9 18l6-6-6-6" />
            </svg>
          </li>
          <li class="text-surface-300 font-medium">System Requirements</li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-14 max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          System Requirements
        </h1>
        <p class="mt-3 text-lg text-surface-400 leading-relaxed">
          What you need to run Photo Organizer on your machine.
        </p>
      </header>

      <!-- Requirements list -->
      <div class="space-y-6">
        {requirements.map((group) => (
          <div class="card p-6 sm:p-8">
            <h2 class="text-base font-semibold text-white mb-4">{group.category}</h2>
            <ul class="space-y-3">
              {group.items.map((item) => (
                <li class="flex items-start gap-3 text-[15px] text-surface-300 leading-relaxed">
                  <svg class="w-5 h-5 text-brand-400 shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 6L9 17l-5-5" />
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Back to docs -->
      <div class="mt-12 text-center">
        <a
          href="/docs"
          class="inline-flex items-center gap-2 text-sm text-surface-500 hover:text-white transition-colors duration-200"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5" />
            <path d="M12 19l-7-7 7-7" />
          </svg>
          Back to Docs
        </a>
      </div>

    </div>
  </main>

  <Footer />
</Layout>
