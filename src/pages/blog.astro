---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Blog - CullVue">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Header -->
      <header class="mb-14 max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          Blog
        </h1>
        <p class="mt-3 text-lg text-surface-400 leading-relaxed">
          Updates, tutorials, and behind-the-scenes looks at CullVue.
        </p>
      </header>

      <!-- Coming soon card -->
      <div class="blog-coming-soon card p-10 sm:p-14 text-center">
        <!-- Pencil icon -->
        <div class="w-14 h-14 mx-auto mb-6 rounded-2xl bg-accent-purple/10 border border-accent-purple/20
                    flex items-center justify-center text-accent-purple">
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4L16.5 3.5z" />
          </svg>
        </div>

        <h2 class="text-2xl font-semibold text-white mb-3">Coming Soon</h2>
        <p class="text-[15px] text-surface-400 max-w-lg mx-auto leading-relaxed mb-10">
          We're working on some great content. Check back soon for product updates,
          photography tips, and behind-the-scenes looks at CullVue.
        </p>

        <!-- Newsletter signup CTA -->
        <div class="blog-notify-card max-w-md mx-auto p-6 rounded-xl bg-surface-950 border border-surface-800">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-4 h-4 text-brand-400 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
              <polyline points="22,6 12,13 2,6" />
            </svg>
            <p class="text-sm font-medium text-white">Subscribe to get notified when we publish</p>
          </div>
          <p class="text-xs text-surface-500 mb-4">
            Join the waitlist and we'll let you know when new posts go live.
          </p>
          <a href="/waitlist" class="btn-primary text-sm px-6 py-2.5 w-full">
            Join the Waitlist
          </a>
        </div>
      </div>

    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ---- Light mode overrides ---- */
  :global([data-theme="light"]) .blog-coming-soon {
    background-color: #ffffff;
    border-color: #c8ccd6;
  }

  :global([data-theme="light"]) .blog-coming-soon .text-white {
    color: #1a1b2e;
  }

  :global([data-theme="light"]) .blog-coming-soon .text-surface-400 {
    color: #535572;
  }

  :global([data-theme="light"]) .blog-coming-soon .text-surface-500 {
    color: #686c8b;
  }

  :global([data-theme="light"]) .blog-notify-card {
    background-color: #f4f5f8;
    border-color: #d5d8e2;
  }
</style>
