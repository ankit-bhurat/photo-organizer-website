---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Blog - CullVue">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Header -->
      <header class="mb-14 max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          Blog
        </h1>
        <p class="mt-3 text-lg text-surface-400 leading-relaxed">
          Updates, tutorials, and behind-the-scenes looks at CullVue.
        </p>
      </header>

      <!-- Placeholder card -->
      <div class="card p-10 text-center">
        <div class="w-12 h-12 mx-auto mb-5 rounded-xl bg-accent-purple/10 border border-accent-purple/20
                    flex items-center justify-center text-accent-purple">
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4L16.5 3.5z" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-white mb-2">Blog posts coming soon.</h2>
        <p class="text-sm text-surface-400 max-w-md mx-auto leading-relaxed mb-6">
          We are working on our first posts. Check back soon for updates on development
          progress, feature deep-dives, and photography tips.
        </p>
        <a href="/" class="btn-primary text-sm px-6 py-2.5 inline-flex">
          Back to Home
        </a>
      </div>

    </div>
  </main>

  <Footer />
</Layout>
