---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Pricing - Photo Organizer">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Header -->
      <header class="mb-14 max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          Pricing
        </h1>
        <p class="mt-3 text-lg text-surface-400 leading-relaxed">
          Simple, honest pricing. No subscriptions. No hidden fees.
        </p>
      </header>

      <!-- Pricing card -->
      <div class="card p-10 text-center max-w-lg mx-auto">
        <div class="w-12 h-12 mx-auto mb-5 rounded-xl bg-accent-green/10 border border-accent-green/20
                    flex items-center justify-center text-accent-green">
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z" />
            <line x1="7" y1="7" x2="7.01" y2="7" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-white mb-3">Free for up to 10,000 photos.</h2>
        <p class="text-sm text-surface-400 leading-relaxed mb-2">
          One-time purchase for unlimited photos. No recurring charges, ever.
        </p>
        <p class="text-xs text-surface-500 mb-8">
          Detailed pricing will be announced at launch.
        </p>
        <a href="/waitlist" class="btn-primary text-sm px-6 py-2.5 inline-flex">
          Join Waitlist
        </a>
      </div>

    </div>
  </main>

  <Footer />
</Layout>
