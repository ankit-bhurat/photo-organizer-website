---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import DownloadSection from '../components/DownloadSection';
---

<Layout title="Download CullVue">
  <Navbar />
  <main class="pt-24">
    <section class="section-spacing">
      <div class="container-narrow text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Download CullVue</h1>
        <p class="text-lg text-surface-300 max-w-2xl mx-auto">Choose your platform. We'll let you know when it's ready.</p>
        <p class="text-sm text-surface-400 mt-3 max-w-xl mx-auto">CullVue is coming soon. Join the waitlist to be notified when it's available for your platform.</p>
      </div>
      <DownloadSection client:load />
    </section>
  </main>
  <Footer />
</Layout>
