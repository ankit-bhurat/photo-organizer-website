---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Changelog - CullVue">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Header -->
      <header class="mb-14 max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          Changelog
        </h1>
        <p class="mt-3 text-lg text-surface-400 leading-relaxed">
          A record of every update, improvement, and fix shipped to CullVue.
        </p>
      </header>

      <!-- Beta notice -->
      <div class="changelog-notice flex items-start gap-3 p-4 rounded-xl bg-brand-500/5 border border-brand-500/15 mb-8">
        <svg class="w-5 h-5 text-brand-400 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10" />
          <line x1="12" y1="16" x2="12" y2="12" />
          <line x1="12" y1="8" x2="12.01" y2="8" />
        </svg>
        <p class="text-sm text-surface-300 leading-relaxed">
          CullVue is in beta. This changelog will be updated with each release.
        </p>
      </div>

      <!-- Changelog timeline -->
      <div class="space-y-6">

        <!-- v0.1.0 entry -->
        <div class="changelog-entry card p-6 sm:p-8">
          <!-- Version + date row -->
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                         bg-accent-green/10 text-accent-green border border-accent-green/20">
              Beta
            </span>
            <h2 class="text-lg font-semibold text-white">v0.1.0</h2>
            <span class="text-sm text-surface-400">&mdash; February 2026</span>
          </div>

          <!-- Description -->
          <p class="text-[15px] text-surface-300 leading-relaxed">
            Initial beta release. CullVue is in active development. Join the waitlist to
            be first to try it.
          </p>
        </div>

      </div>

      <!-- Waitlist CTA -->
      <div class="changelog-cta card p-8 text-center mt-14">
        <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-brand-500/10 border border-brand-500/20
                    flex items-center justify-center text-brand-400">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
            <polyline points="22,6 12,13 2,6" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white">Stay in the loop</h3>
        <p class="mt-2 text-sm text-surface-300 max-w-md mx-auto leading-relaxed">
          Join the waitlist to get notified about new releases and updates.
        </p>
        <a href="/waitlist" class="btn-primary text-sm px-6 py-2.5 mt-5 inline-flex">
          Join the Waitlist
        </a>
      </div>

      <!-- Back to home -->
      <div class="mt-10 text-center">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-sm text-surface-500 hover:text-white transition-colors duration-200"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5" />
            <path d="M12 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>
      </div>

    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ---- Light mode overrides ---- */
  :global([data-theme="light"]) .changelog-notice {
    background-color: rgba(30, 111, 245, 0.05);
    border-color: rgba(30, 111, 245, 0.18);
  }

  :global([data-theme="light"]) .changelog-notice .text-surface-300 {
    color: #3b3c4f;
  }

  :global([data-theme="light"]) .changelog-entry {
    background-color: #ffffff;
    border-color: #c8ccd6;
  }

  :global([data-theme="light"]) .changelog-entry .text-white {
    color: #1a1b2e;
  }

  :global([data-theme="light"]) .changelog-entry .text-surface-300 {
    color: #535572;
  }

  :global([data-theme="light"]) .changelog-entry .text-surface-400 {
    color: #686c8b;
  }

  :global([data-theme="light"]) .changelog-cta {
    background-color: #ffffff;
    border-color: #c8ccd6;
  }

  :global([data-theme="light"]) .changelog-cta .text-white {
    color: #1a1b2e;
  }

  :global([data-theme="light"]) .changelog-cta .text-surface-300 {
    color: #535572;
  }
</style>
