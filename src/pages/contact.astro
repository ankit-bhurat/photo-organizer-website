---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact - CullVue">
  <Navbar />

  <main class="section-spacing">
    <div class="container-narrow">

      <!-- Header -->
      <header class="mb-14 max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight">
          Contact
        </h1>
        <p class="mt-3 text-lg text-surface-400 leading-relaxed">
          Have a question, found a bug, or just want to say hello? We would love to hear from you.
        </p>
      </header>

      <!-- Contact options -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">

        <!-- Email card -->
        <div class="card p-8">
          <div class="w-11 h-11 rounded-xl bg-brand-500/10 border border-brand-500/20
                      flex items-center justify-center text-brand-400 mb-5">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
              <polyline points="22,6 12,13 2,6" />
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-white mb-2">Email</h2>
          <p class="text-sm text-surface-400 leading-relaxed mb-4">
            For general questions, feedback, or support requests.
          </p>
          <a
            href="mailto:support@cullvue.com"
            class="text-sm font-medium text-brand-400 hover:text-brand-300 underline underline-offset-2 decoration-brand-400/30 hover:decoration-brand-300/50 transition-colors duration-200"
          >
            support@cullvue.com
          </a>
        </div>

        <!-- GitHub card -->
        <div class="card p-8">
          <div class="w-11 h-11 rounded-xl bg-surface-800/80 border border-surface-700/60
                      flex items-center justify-center text-surface-300 mb-5">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-white mb-2">GitHub Issues</h2>
          <p class="text-sm text-surface-400 leading-relaxed mb-4">
            For bug reports, feature requests, and technical discussions.
          </p>
          <a
            href="https://github.com/cullvue/cullvue/issues"
            class="text-sm font-medium text-brand-400 hover:text-brand-300 underline underline-offset-2 decoration-brand-400/30 hover:decoration-brand-300/50 transition-colors duration-200"
          >
            Open an Issue
          </a>
        </div>

      </div>

      <!-- Back to home -->
      <div class="mt-12 text-center">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-sm text-surface-500 hover:text-white transition-colors duration-200"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5" />
            <path d="M12 19l-7-7 7-7" />
          </svg>
          Back to Home
        </a>
      </div>

    </div>
  </main>

  <Footer />
</Layout>
