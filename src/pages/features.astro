---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Features - CullVue">
  <Navbar />

  <main>
    <!-- Hero Section -->
    <section class="section-spacing relative overflow-hidden">
      <!-- Background gradient accent -->
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-20 left-1/2 -translate-x-1/2 w-[900px] h-[500px] bg-brand-500/[0.04] rounded-full blur-[140px]"></div>
      </div>

      <div class="container-narrow relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <p class="text-brand-400 font-medium text-sm tracking-wide uppercase mb-4">Complete Feature Set</p>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tight">
            Everything you need to
            <span class="gradient-text">organize your library</span>
          </h1>
          <p class="mt-6 text-surface-400 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
            CullVue combines powerful AI with blazing fast performance and total privacy.
            Built for photographers who refuse to compromise.
          </p>
        </div>
      </div>
    </section>

    <!-- AI Semantic Search - Hero Feature -->
    <section class="py-16 md:py-24 relative overflow-hidden">
      <!-- Background glow -->
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[500px] bg-brand-500/[0.03] rounded-full blur-[120px]"></div>
      </div>

      <div class="container-narrow relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Content -->
          <div>
            <div class="w-14 h-14 rounded-xl bg-brand-500/10 border border-brand-500/20 flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="7" />
                <path d="m21 21-4.35-4.35" />
                <path d="M8 11h6" />
                <path d="M11 8v6" />
              </svg>
            </div>

            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              AI Semantic Search
            </h2>
            <p class="text-surface-400 text-lg leading-relaxed mb-6">
              Find photos by describing them in plain language. No keywords, no tags, no manual work.
              Just type what you're looking for and get instant results.
            </p>

            <div class="space-y-4 mb-8">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-5 h-5 rounded-full bg-brand-500/10 border border-brand-500/20 flex items-center justify-center mt-0.5">
                  <svg class="w-3 h-3 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                </div>
                <div>
                  <p class="text-white font-medium mb-1">Powered by MobileCLIP-S2</p>
                  <p class="text-surface-400 text-sm leading-relaxed">State-of-the-art vision-language model optimized for on-device inference</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-5 h-5 rounded-full bg-brand-500/10 border border-brand-500/20 flex items-center justify-center mt-0.5">
                  <svg class="w-3 h-3 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                </div>
                <div>
                  <p class="text-white font-medium mb-1">100% Offline Processing</p>
                  <p class="text-surface-400 text-sm leading-relaxed">All AI runs on your device using Apple Neural Engine or CPU. No cloud required.</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-5 h-5 rounded-full bg-brand-500/10 border border-brand-500/20 flex items-center justify-center mt-0.5">
                  <svg class="w-3 h-3 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                </div>
                <div>
                  <p class="text-white font-medium mb-1">Lightning Fast Results</p>
                  <p class="text-surface-400 text-sm leading-relaxed">Search 50,000+ photos in milliseconds with relevance-ranked results</p>
