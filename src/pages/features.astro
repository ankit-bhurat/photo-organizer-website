                <span class="flex items-center gap-2">
                  <span class="w-2 h-2 rounded-full bg-accent-green animate-pulse"></span>
                  247 matches found
                </span>
                <span class="font-mono">42ms</span>
              </div>

              <!-- Hardware badge -->
              <div class="mt-5 pt-5 border-t border-surface-800/50">
                <div class="flex items-center justify-center gap-2 text-xs text-surface-400">
                  <svg class="w-4 h-4 text-brand-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83" />
                  </svg>
                  <span>Running on Apple Neural Engine</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Smart Organization -->
    <section class="py-16 md:py-24 bg-surface-950/50">
      <div class="container-narrow">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Visual -->
          <div>
            <div class="card p-6 md:p-8">
              <p class="text-xs text-surface-400 uppercase tracking-wider font-medium mb-4">Tags & Albums</p>

              <!-- Tag pills -->
              <div class="flex flex-wrap gap-2 mb-6">
                <span class="inline-flex items-center gap-2 px-3.5 py-2 rounded-lg text-sm font-medium bg-accent-purple/10 text-accent-purple border border-accent-purple/20">
                  <span class="text-base">üåç</span> Travel
                </span>
                <span class="inline-flex items-center gap-2 px-3.5 py-2 rounded-lg text-sm font-medium bg-accent-pink/10 text-accent-pink border border-accent-pink/20">
                  <span class="text-base">üì∑</span> Portrait
                </span>
                <span class="inline-flex items-center gap-2 px-3.5 py-2 rounded-lg text-sm font-medium bg-accent-cyan/10 text-accent-cyan border border-accent-cyan/20">
