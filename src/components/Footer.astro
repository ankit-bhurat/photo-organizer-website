---
const year = new Date().getFullYear();

const productLinks = [
  { label: 'Features', href: '/features' },
  { label: 'Downloads', href: '/downloads' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Changelog', href: '/changelog' },
];

const resourceLinks = [
  { label: 'Documentation', href: '/docs' },
  { label: 'Getting Started', href: '/docs/getting-started' },
  { label: 'FAQ', href: '/docs/faq' },
  { label: 'System Requirements', href: '/docs/system-requirements' },
];

const companyLinks = [
  { label: 'About', href: '/about' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
  { label: 'Privacy Policy', href: '/privacy' },
];
---

<footer class="relative mt-24">
  <!-- Gradient border line -->
  <div class="h-px bg-gradient-to-r from-transparent via-brand-500/40 to-transparent" />

  <!-- Newsletter band -->
  <div class="bg-surface-900 border-b border-surface-800">
    <div class="container-wide py-8 flex flex-col sm:flex-row items-center justify-between gap-6">
      <div class="text-center sm:text-left">
        <h3 class="text-base font-semibold text-white">Stay in the loop</h3>
        <p class="text-sm text-surface-300 mt-1">
          Product updates, tips, and the occasional behind-the-scenes look.
        </p>
      </div>
      <form
        class="flex w-full sm:w-auto"
        action="#"
        method="POST"
      >
        <div class="relative flex items-center w-full sm:w-auto">
          <input
            type="email"
            name="email"
            required
            placeholder="you@example.com"
            aria-label="Email address"
            class="w-full sm:w-72 h-11 pl-4 pr-[7.5rem] rounded-xl
                   bg-surface-950/80 border border-surface-700/60
                   text-sm text-white placeholder:text-surface-500
                   focus:outline-none focus:border-brand-500/60 focus:ring-1 focus:ring-brand-500/30
                   transition-colors duration-200"
          />
          <button
            type="submit"
            class="absolute right-1 h-9 px-4 rounded-lg
                   bg-brand-600 text-sm font-medium text-white
                   hover:bg-brand-500 active:bg-brand-700
                   transition-colors duration-150
                   shadow-sm shadow-brand-600/20"
          >
            Subscribe
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Main footer content -->
  <div class="bg-surface-950">
    <div class="container-wide py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8">

        <!-- Brand column -->
        <div class="lg:col-span-4 space-y-5">
          <a href="/" class="inline-flex items-center gap-2.5 group">
            <!-- Camera aperture icon -->
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-brand-500 to-brand-700 flex items-center justify-center shadow-lg shadow-brand-600/20 group-hover:shadow-brand-500/30 transition-shadow duration-300">
              <svg class="w-4.5 h-4.5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10" />
                <path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83M16.62 12l-5.74 9.94" />
              </svg>
            </div>
            <span class="text-lg font-semibold text-white tracking-tight">
              Photo Organizer
            </span>
          </a>

          <p class="text-sm leading-relaxed text-surface-300 max-w-xs">
            Your photos. Your device. Your privacy.<br />
            A local-first photo manager built for people who care about ownership.
          </p>

          <!-- Social links -->
          <div class="flex items-center gap-1 pt-1">
            <a
              href="https://github.com/photo-organizer"
              aria-label="GitHub"
              class="p-2 rounded-lg text-surface-400 hover:text-white hover:bg-surface-800/60 transition-all duration-200"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
              </svg>
            </a>
            <a
              href="https://x.com/photo_organizer"
              aria-label="X (Twitter)"
              class="p-2 rounded-lg text-surface-400 hover:text-white hover:bg-surface-800/60 transition-all duration-200"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Link columns -->
        <nav class="lg:col-span-8 grid grid-cols-2 sm:grid-cols-3 gap-10 lg:gap-8 lg:pl-8" aria-label="Footer navigation">
          <div>
            <h4 class="text-xs font-semibold uppercase tracking-widest text-surface-300 mb-4">
              Product
            </h4>
            <ul class="space-y-2.5">
              {productLinks.map(link => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-surface-300 hover:text-white transition-colors duration-200"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div>
            <h4 class="text-xs font-semibold uppercase tracking-widest text-surface-300 mb-4">
              Resources
            </h4>
            <ul class="space-y-2.5">
              {resourceLinks.map(link => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-surface-300 hover:text-white transition-colors duration-200"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <div class="col-span-2 sm:col-span-1">
            <h4 class="text-xs font-semibold uppercase tracking-widest text-surface-300 mb-4">
              Company
            </h4>
            <ul class="space-y-2.5">
              {companyLinks.map(link => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-surface-300 hover:text-white transition-colors duration-200"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </nav>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-surface-800">
      <div class="container-wide py-6 flex flex-col sm:flex-row items-center justify-between gap-3">
        <p class="text-xs text-surface-400">
          &copy; {year} Photo Organizer. All rights reserved.
        </p>
        <p class="text-xs text-surface-400">
          Made with care for photographers
          <span class="inline-block ml-0.5 text-accent-pink/70" aria-hidden="true">&hearts;</span>
        </p>
      </div>
    </div>
  </div>
</footer>
